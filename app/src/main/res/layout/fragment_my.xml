<?xml version="1" encoding="utf-8"?>
<RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:id="@+id/my_info"
                android:background="@mipmap/mine_bg"
                android:layout_width="fill_parent"
                android:layout_height="140dp">
                <ImageView
                    android:id="@+id/my_header"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="23dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true" />
                <RelativeLayout
                    android:id="@+id/my_detail_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_toLeftOf="@+id/right_arrow"
                    android:layout_toRightOf="@+id/my_header"
                    android:layout_centerVertical="true">
                    <RelativeLayout
                        android:id="@+id/my_name_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:id="@+id/my_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                        <ImageView
                            android:id="@+id/my_sex_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_toRightOf="@+id/my_name_tv"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <TextView
                        android:textSize="11dp"
                        android:textColor="@color/white"
                        android:id="@+id/my_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:layout_below="@+id/my_name_layout" />
                </RelativeLayout>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:id="@+id/loginBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="还未登录哦"
                    android:layout_toRightOf="@+id/my_header"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/right_arrow_white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lv_progress"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/my_info">
                <View
                    android:background="#ff33a905"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
                <View
                    android:id="@+id/lv_progress_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/fans_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:weightSum="3"
                android:visibility="gone"
                android:layout_below="@+id/lv_progress">
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/orange"
                    android:gravity="center"
                    android:id="@+id/my_unread_fans"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/my_fans_tv_layout"
                    android:layout_alignTop="@+id/my_fans_tv_layout" />
            </LinearLayout>
            <View
                android:id="@+id/divider5"
                android:background="@mipmap/home_divider"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/fans_layout" />
            <RelativeLayout
                android:id="@+id/myLvLayout"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_below="@+id/divider5">
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/blackFont"
                    android:id="@+id/my_lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="等级"
                    android:drawableLeft="@mipmap/my_lv"
                    android:drawablePadding="16dp"
                    android:layout_centerVertical="true" />
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/orange"
                    android:id="@+id/my_lv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:id="@+id/divider6"
                android:background="@mipmap/home_divider"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/myLvLayout" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/msgLayout"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:weightSum="2"
                android:layout_below="@+id/divider6">
                <RelativeLayout
                    android:id="@+id/tongzhiLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/blackFont"
                        android:id="@+id/myTongzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="通知"
                        android:drawableLeft="@mipmap/my_tongzhi"
                        android:drawablePadding="16dp"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:textSize="9dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/myTongzhiNum"
                        android:background="@mipmap/num_back"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text=""
                        android:layout_toLeftOf="@+id/tongzhi_right"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:id="@+id/tongzhi_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <View
                    android:background="@color/divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_weight="0" />
                <RelativeLayout
                    android:id="@+id/sixinLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/blackFont"
                        android:id="@+id/mySixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="私信"
                        android:drawableLeft="@mipmap/my_sixin"
                        android:drawablePadding="16dp"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:textSize="9dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/mySixinNum"
                        android:background="@mipmap/num_back"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text=""
                        android:layout_toLeftOf="@+id/sixin_right"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:id="@+id/sixin_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/divider7"
                android:background="@mipmap/home_divider"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/msgLayout" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/detailLayout"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:weightSum="2"
                android:layout_below="@+id/divider7">
                <RelativeLayout
                    android:id="@+id/my_fav_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/blackFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="收藏"
                        android:drawableLeft="@mipmap/my_fav"
                        android:drawablePadding="16dp"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <View
                    android:background="@color/divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_weight="0" />
                <RelativeLayout
                    android:id="@+id/my_caogao_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/blackFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="草稿"
                        android:drawableLeft="@mipmap/my_caogao"
                        android:drawablePadding="16dp"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:textSize="9dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/myCaogaoNum"
                        android:background="@mipmap/num_back"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="1"
                        android:layout_toLeftOf="@+id/caogao_right"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:id="@+id/caogao_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/divider8"
                android:background="@mipmap/home_divider"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/detailLayout" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/settingLayout"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:weightSum="2"
                android:layout_below="@+id/divider8">
                <RelativeLayout
                    android:id="@+id/my_setting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/blackFont"
                        android:id="@+id/mySettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="系统设置"
                        android:drawableLeft="@mipmap/my_setting"
                        android:drawablePadding="16dp"
                        android:layout_centerVertical="true" />
                    <ImageView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <View
                    android:background="@color/divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_weight="0" />
                <RelativeLayout
                    android:id="@+id/feedbackLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/blackFont"
                        android:id="@+id/myFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="意见反馈"
                        android:drawableLeft="@mipmap/my_feedback"
                        android:drawablePadding="16dp"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/divider9"
                android:background="@mipmap/home_divider"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/settingLayout" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
