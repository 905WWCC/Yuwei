<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hot_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <com.product.yuwei.tool.GradientImageView
            android:id="@+id/hot_author"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/hot_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:padding="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/hot_text"
        android:layout_width="match_parent"
        android:lines="3"
        android:ellipsize="end"
        android:layout_height="60dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        >
        <ImageView
            android:id="@+id/hot_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            />
        <TextView
            android:id="@+id/hot_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginBottom="60dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_gravity="center_horizontal|bottom"
            />
        <TextView
            android:id="@+id/hot_image_numText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="45dp"
            android:layout_gravity="center_horizontal|bottom"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/hot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:textSize="17sp"
        />

</LinearLayout>