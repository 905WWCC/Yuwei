<?xml version="1" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/homePageItemTitleLayoutWhole"
        android:visibility="gone" android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/homeDivider"
            android:background="@mipmap/home_divider"
            android:layout_width="fill_parent"
            android:layout_height="7dp" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/homePageItemTitleLayout"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/homeDivider">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/blackFont"
                android:id="@+id/homePageItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxEms="12"
                android:singleLine="true"
                android:drawableLeft="@mipmap/home_orange_di"
                android:drawablePadding="5dp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/blankView1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/homePageItemTitleLayoutWhole" />
    <ImageView
        android:id="@+id/cover"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/blankView1" />
    <TextView
        android:textSize="13dp"
        android:textColor="@color/fontColor"
        android:ellipsize="end"
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:text="wws"
        android:singleLine="true"
        android:layout_toRightOf="@+id/cover"
        android:layout_below="@+id/blankView1" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/cover"
        android:layout_below="@+id/name">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/fontColor"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_centerVertical="true" />
        <com.product.yuwei.view.localview.GradientImageView
            android:id="@+id/authorHeader"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/citymap_1"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/time" />
        <TextView
            android:textSize="12dp"
            android:textColor="@color/fontColor"
            android:ellipsize="end"
            android:id="@+id/authorName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="11dp"
            android:text=""
            android:maxLines="1"
            android:layout_toRightOf="@+id/authorHeader"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:layout_below="@+id/cover" />
</RelativeLayout>